#!/usr/bin/env php
<?php

require_once dirname(__DIR__, 2) . '/vendor/autoload.php';

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)

Options:
  -h --help                     Show this screen
  -v --version                  Show version
DOC;

$args = Docopt::handle($doc, ['version'=>'0.1']);
foreach ($args as $k=>$v)
    echo $k.': '.json_encode($v).PHP_EOL;