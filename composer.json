{
  "name": "renakdup/php-project-lvl2",
  "description": "Вычислитель отличий",
  "keywords" : [
    "gendiff", "project", "console"
  ],
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "renakdup",
      "email": "renakdup@gmail.com"
    }
  ],
  "bin": [
    "public/bin/gendiff"
  ],
  "require": {
    "symfony/var-dumper": "5.0.7",
    "tightenco/collect": "7.6.1",
    "docopt/docopt": "1.0.4",
    "symfony/yaml": "^5.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.5.5",
    "phpunit/phpunit": "^9.1"
  },
  "autoload": {
    "files": [
      "inc/Gendiff.php",
      "inc/formatters/DefaultFormat.php",
      "inc/formatters/Plain.php",
      "inc/formatters/Json.php",
      "inc/GenerateAst.php",
      "inc/ParseFile.php",
      "inc/CommandLine.php"
    ]
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs",
    "phpcbf": "vendor/bin/phpcbf",
    "phpunit": "vendor/bin/phpunit"
  }
}
